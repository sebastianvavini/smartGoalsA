<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".SalaActivity">

    <TextView
        android:id="@+id/text_view_wellCome"
        android:layout_width="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Olá, qual sua meta ou idéia?"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/edit_estalo"
        android:layout_marginTop="96dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ideia ou Objetivo"

        app:layout_constraintTop_toBottomOf="@+id/text_view_wellCome"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <Button
        android:id="@+id/button_validar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Validar"

        app:layout_constraintTop_toBottomOf="@+id/edit_estalo"
        app:layout_constraintStart_toStartOf="@+id/edit_estalo"
        app:layout_constraintEnd_toEndOf="@+id/edit_estalo"

        />



</androidx.constraintlayout.widget.ConstraintLayout>