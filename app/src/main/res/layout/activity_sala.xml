<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".SalaActivity">

    <TextView
        android:id="@+id/text_conta"
        android:layout_width="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Conta"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/text_saldo"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Saldo"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/text_conta"
        app:layout_constraintStart_toStartOf="@+id/text_conta"
        app:layout_constraintEnd_toEndOf="@+id/text_conta"
        />

    <TextView
        android:id="@+id/text_view_wellCome"
        android:layout_width="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Olá, qual sua meta ou idéia?"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@+id/text_saldo"
        app:layout_constraintStart_toStartOf="@+id/text_saldo"
        app:layout_constraintEnd_toEndOf="@+id/text_saldo"
        />

    <EditText
        android:id="@+id/edit_estalo"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ideia ou Objetivo"

        app:layout_constraintTop_toBottomOf="@+id/text_view_wellCome"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />


    <LinearLayout

        android:id="@+id/demanda_oferta_layout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_estalo"
        app:layout_constraintStart_toStartOf="@+id/edit_estalo"
        app:layout_constraintEnd_toEndOf="@+id/edit_estalo"
        >
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dbeceb"
            android:padding="15dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isto é uma Oferta ou uma Demanda?"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <RadioButton
                android:id="@+id/oferta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oferta"
                />

            <RadioButton
                android:id="@+id/demanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demanda"
                />


        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/button_validar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Validar"

        app:layout_constraintTop_toBottomOf="@+id/demanda_oferta_layout"
        app:layout_constraintStart_toStartOf="@+id/demanda_oferta_layout"
        app:layout_constraintEnd_toEndOf="@+id/demanda_oferta_layout"

        />



</androidx.constraintlayout.widget.ConstraintLayout>