<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp"
    tools:context=".AtribuivelActivity">

    <TextView
        android:id="@+id/textView_estalo"
        android:layout_width="0dp"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="Sua ideia"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/textView_Atribuivel"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Atribuível"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_estalo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <EditText
        android:id="@+id/editText_responsaveis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="Quais são as equipes ou pessoas responsáveis por alcançar a meta?"
        app:layout_constraintTop_toBottomOf="@+id/textView_Atribuivel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/button_avancar_1_de_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Avançar 1/5"
        android:layout_gravity="start"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"

        app:layout_constraintTop_toBottomOf="@+id/editText_responsaveis"
        app:layout_constraintEnd_toEndOf="@+id/editText_responsaveis"
        app:layout_constraintStart_toStartOf="@+id/editText_responsaveis"

        />

</androidx.constraintlayout.widget.ConstraintLayout>