<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp"
    tools:context=".EspecificaActivity">

    <TextView
        android:id="@+id/textView_estalo"
        android:layout_width="0dp"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:hint="Sua ideia"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/textView_Especifica"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Especifica"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_estalo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/pergunta1_especifica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="O que deseja alcançar?"
        app:layout_constraintTop_toBottomOf="@+id/textView_Especifica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/editText_expectativa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="Responda:"
        app:layout_constraintTop_toBottomOf="@+id/pergunta1_especifica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/pergunta2_especifica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Por que esta meta é importante?"
        app:layout_constraintTop_toBottomOf="@+id/editText_expectativa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/editText_importancia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="Responda:"
        app:layout_constraintTop_toBottomOf="@+id/pergunta2_especifica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/pergunta3_especifica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Quem são os envolvidos?"
        app:layout_constraintTop_toBottomOf="@+id/editText_importancia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/editText_envolvidos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="Responda:"
        app:layout_constraintTop_toBottomOf="@+id/pergunta3_especifica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/pergunta4_especifica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Quais são os recursos necessários?"
        app:layout_constraintTop_toBottomOf="@+id/editText_envolvidos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/editText_recursos_necessarios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="Responda:"
        app:layout_constraintTop_toBottomOf="@+id/pergunta4_especifica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/button_avancar_para_mensuravel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Avançar"
        android:layout_gravity="start"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"

        app:layout_constraintTop_toBottomOf="@+id/editText_recursos_necessarios"
        app:layout_constraintEnd_toEndOf="@+id/editText_recursos_necessarios"
        app:layout_constraintStart_toStartOf="@+id/editText_recursos_necessarios"

        />


</androidx.constraintlayout.widget.ConstraintLayout>