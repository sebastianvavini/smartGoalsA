<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp"
    tools:context=".TemporalActivity">

    <TextView
        android:id="@+id/textView_estalo"
        android:layout_width="0dp"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"

        android:textColorHint="@color/black"
        android:hint="Sua ideia"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/textView_Temporal"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="É Temporal?"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_estalo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/textview_pergunta1_temporal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Qual é a data de Fim do projeto?"
        android:textColor="@color/black"

        app:layout_constraintTop_toBottomOf="@+id/textView_Temporal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <EditText
        android:id="@+id/editText_data_final"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="Data do Fim:"
        app:layout_constraintTop_toBottomOf="@+id/textview_pergunta1_temporal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/textView_o_que_pode_ser_alcancado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="O que pode ser alcançado neste periodo?"
        android:textColor="@color/black"

        app:layout_constraintTop_toBottomOf="@+id/editText_data_final"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/editText_o_que_pode_ser_alcancado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="O que pode ser alcançado neste período?:"
        app:layout_constraintTop_toBottomOf="@+id/textView_o_que_pode_ser_alcancado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/button_avancar_para_conclusao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Avançar"
        android:layout_gravity="start"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"

        app:layout_constraintTop_toBottomOf="@+id/editText_o_que_pode_ser_alcancado"
        app:layout_constraintEnd_toEndOf="@+id/editText_o_que_pode_ser_alcancado"
        app:layout_constraintStart_toStartOf="@+id/editText_o_que_pode_ser_alcancado"

        />

</androidx.constraintlayout.widget.ConstraintLayout>