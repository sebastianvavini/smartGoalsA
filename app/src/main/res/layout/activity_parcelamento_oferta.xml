<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParcelamentoOfertaActivity">

    <TextView
        android:id="@+id/text_Oferta_tela_Parcelamento"
        android:layout_width="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Parcelamento da Oferta:"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_estalo_oferta_parcelamento"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Texto do Estalo:"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/text_Oferta_tela_Parcelamento"
        app:layout_constraintStart_toStartOf="@+id/text_Oferta_tela_Parcelamento"
        app:layout_constraintEnd_toEndOf="@+id/text_Oferta_tela_Parcelamento"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/text_estalo_oferta_parcelamento"
        app:layout_constraintStart_toStartOf="@+id/text_estalo_oferta_parcelamento"
        app:layout_constraintEnd_toEndOf="@+id/text_estalo_oferta_parcelamento">

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:padding="20dp"/>

        <Spinner
            android:id="@+id/spinner_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>